{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Experimental: Current File (Integrated Terminal)",
            "type": "pythonExperimental",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Experimental: Attach",
            "type": "pythonExperimental",
            "request": "attach",
            "port": 8080,
            "host": "localhost"
        },
        {
            "name": "Python Experimental: Swagger",
            "type": "pythonExperimental",
            "request": "launch",
            "module": "openapi_server",
            "cwd": "${workspaceFolder}/bb_server",
            "args": [
                "--no-debugger",
                "--no-reload"
            ]
        },
        {
            "name": "Python Experimental: Current File (External Terminal)",
            "type": "pythonExperimental",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}